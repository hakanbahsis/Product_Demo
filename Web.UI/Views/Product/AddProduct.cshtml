@model Entitiy.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>
<form method="post">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br/>
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x=>x.Price,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Price)
    <br/>
    @Html.Label("Ürün Stok Sayısı")
    @Html.TextBoxFor(x=>x.Stock,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Stock)
    <br/>
    @Html.Label("Ürün Kategori")
    @Html.DropDownListFor(x=>x.Category.CategoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
    <button class="btn btn-primary">Ürün Ekle</button>

</form>

