@using Entitiy.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürünler Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Stok</th>
        <th>Ürün Kategori</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price ₺</td>
            <td>@item.Stock</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a> - 
                <a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-outline-primary">Yeni Ürün Ekle</a>

