@using Entitiy.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Müşteri Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>Müşteri Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Şehri</th>
        <th>Müşteri Meslek</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {<tr>
         <td>@item.Id</td>
         <td>@item.Name</td>
         <td>@item.City</td>
         <td>@item.Job.Name</td>
         <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger">Sil</a> - 
             <a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
     </tr>
    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-outline-primary">Yeni Müşteri Kaydet</a>
